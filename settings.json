{
  // --------------------- editor ---------------------
  "workbench.colorTheme": "Nord",
  "editor.fontFamily": "Geist Mono, Roboto Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.acceptSuggestionOnEnter": "off",
  "editor.minimap.enabled": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.rulers": [100],
  "editor.fontSize": 13,
  "editor.inlineSuggest.enabled": true,
  "editor.glyphMargin": true,
  "editor.formatOnSave": true,
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingOvertype": "never",
  "editor.autoClosingQuotes": "never",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "editor.stickyScroll.scrollWithEditor": false,
  "workbench.tree.enableStickyScroll": false,

  // --------------------- languages ---------------------
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[python]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.formatOnSave": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.wordWrap": "on",
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "svelte.enable-ts-plugin": true,
  "javascript.suggest.enabled": false,
  "typescript.suggest.enabled": false,
  "tailwindCSS.suggestions": false,
  "html.autoClosingTags": false,
  "html.autoCreateQuotes": false,

  // ----------- formatters & linters --------------
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // --------------------- copilot -----------------
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "yaml": false,
    "javascript": true
  },
  "github.copilot.advanced": {},

  // --------------------- neo vim ------------------
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.neovimExecutablePaths.darwin": "nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.vim",

  // --------------------- misc ---------------------
  // "terminal.external.osxExec": "iTerm.app",
  "zenMode.hideLineNumbers": false,
  "zenMode.centerLayout": false,
  "workbench.editor.enablePreview": false,
  "files.exclude": {
    "**/__pycache__/**": true
  }
}
